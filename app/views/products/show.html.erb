<div class="row">
  <div class="col-lg-12">
    <h1>Products Details</h1> 
    <%= link_to "Back to products", products_path, class:"btn btn-primary" %>
    <%= link_to "Edit this product", edit_product_path(@product), class:"btn btn-primary"  %>  
    <%= link_to "Destroy this product", @product, method: :delete, class:"btn btn-danger"  %>
    <%= link_to "Create Movement", new_movement_product_path(@product), class: "btn btn-success" %>

    <div class="card">
      <table class="table">
       <tr>
         <td><b>Product Name</b></td>
         <td><%= @product.name %></td>
       </tr>
       <tr>
         <td><b>Reference</b></td>
         <td><%= @product.reference %></td>
       </tr>
       <tr>
         <td><b>Description</td>
         <td><%= @product.description %></td>
       </tr>
       <tr>
         <td><b>Stock</td>
         <td><%= @product.quantity %></td>
       </tr>
       <tr>
         <td><b>Date</td>
         <td><%= @product.created_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-lg-12">
    <div class="card pt-3">
      <h1>Movements</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Type</th>
            <th>Quantity</th>
            <th>Comment</th>
            <th>Date/Time</th>
          </tr>
        </thead>
        <tbody>
          <% @product.movements.each do |movement| %>
            <tr>
              <td><%= movement.movement_type_name %></td>
              <td><%= movement.quantity %></td>
              <td><%= movement.comment %></td>
              <td><%= movement.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>
</div>